generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Categoria { 
  id String @id @db.Uuid
  nome String @db.VarChar(50)
  dataCriacao  DateTime @default(now()) @map("data_criacao")
  dataAtualizacao DateTime @updatedAt @map("data_atualizaçao")
  produtos Produto[]

@@map("categoria")

}

model Produto {
  id String @id @db.Uuid
  nome String @db.VarChar(50)
  valor Int
  dataCriacao  DateTime @default(now()) @map("data_criacao")
  dataAtualizacao DateTime @updatedAt @map("data_atualizaçao")
  categoria Categoria[]

}

